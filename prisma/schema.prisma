generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trasaction {
  id            String                  @id @default(uuid())
  name          String
  type          TrasactionType
  amount        Decimal                 @db.Decimal(10, 2)
  category      TrasactionCategory
  paymentMethod TrasactionPaymentMethod
  data          DateTime
  createdAt     DateTime                @default(now())
  updatedAt     DateTime                @updatedAt
}

enum TrasactionType {
  DEPOSIT
  EXPENSE
  INVESTIMENT
}

enum TrasactionCategory {
  HOUSING
  TRANSPORTATION
  FOOD
  UTILITY
  ENTERTAINMENT
  HEALTH
  SALARY
  EDUCATION
  TRAVEL
  OTHERS
}

enum TrasactionPaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  BANK_TRANSFER
  BANK_SLIP
  CASH
  PIX
  OTHERS
}
